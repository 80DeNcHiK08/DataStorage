@model DataStorage.App.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Document/_Layout.cshtml";
}
<div class="leftbar">
</div>
<div class="workspace">
    <div class="form-group">
        <h3>E-Mail: @Model.Email</h3>
    </div>
    <form asp-action="NameChange" asp-controller="Account" asp-anti-forgery="true" class="validate">
        <input asp-for="UserId" value=@Model.UserId type="hidden" />
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="form-group-handler">
            <div class="form-group">
                <input placeholder=" " required pattern="^[a-zA-Z0-9\s]+$" type="text" value=@Model.UserFirstName asp-for="UserFirstName" />
                <label asp-for="UserFirstName" class="elemental">First Name</label>
            </div>
            <div class="form-group">
                <input placeholder=" " required pattern="^[a-zA-Z0-9\s]+$" type="text" value=@Model.UserLastName asp-for="UserLastName" />
                <label asp-for="UserLastName" class="elemental">Last Name</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-block" />
            </div>
        </div>
    </form>

    <div class="form-group">
        <h3>Your current storage size: @(Model.StorageSize/1048576) mb</h3>
        @if (Model.StorageSize <= 1073741824)
        {
            <h3><a asp-action="IncreaseStorage" asp-controller="Home" class="btn btn-block">Increase Storage</a></h3>
        }
        </div>

        <div class="form-group">
            <h3><a asp-route-userId="@Model.UserId" asp-route-token="@Model.Token" asp-action="ResetPasswordProf" asp-controller="Home" class="btn btn-block">Reset Password</a></h3>
        </div>
        <div class="form-group">
            <h3><a asp-route-Email="@Model.Email" asp-action="DeleteUser" asp-controller="Account" class="btn btn-google btn-block">Delete Profile</a></h3>
        </div>
</div>
