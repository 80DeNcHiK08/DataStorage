@model DataStorage.App.ViewModels.LoginViewModel

@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="formhandler">
    <div class="formlabel">
        <h3>Login</h3>
    </div>

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <input placeholder=" " required pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,3}$" type="text" asp-for="Email" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <input placeholder=" " required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" type="password" asp-for="Password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group subm">
                <input type="submit" value="Login" class="btn" />
                <p>Remember me</p>
                <div class="remme">
                    <input id="rem" asp-for="rememberMe" />
                    <label for="rem"></label>
                </div>
            </div>
            <p class="links">

                <!--Sign out is here just for Sign in test-->
                <a href="#" onclick="signOut();">Sign out</a>|

                <a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a> |
                <a asp-action="Register" asp-controller="Account">Create new account</a>
            </p>
        </div>
    </form>
    <form asp-action="ExternalLogin" asp-controller="Account" asp-anti-forgery="true" method="post">
        <div>
            <button type="submit" class="btn btn-google btn-social-icon btn-block" title="Login using your Google account"><i class="fab fa-google"></i></button>
        </div>
    </form>
</div>


