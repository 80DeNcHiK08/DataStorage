@model DataStorage.App.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Account/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="wrapper-center">
    <div class="formhandler">
        <!--Login-->
        <div class="formlabel">
            <h3>Login</h3>
        </div>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="validate">
            <div class="form-group">
                <input placeholder=" " required pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,3}$" type="text" asp-for="Email"/>
                <label asp-for="Email" class="elemental">Email</label>
                <span asp-validation-for="Email" class="validation-message collapse">* Email should look like this: example@@gmail.com</span>
            </div>
            <div class="form-group">
                <input placeholder=" " required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" type="password" asp-for="Password"/>
                <label asp-for="Password" class="elemental">Password</label>
                <span class="validation-message collapse">* Password field is required<br>* Password shoul contain one: uppercase, lowercase and non literic symbol<br>* Password must be at least 8 characters long</span>
            </div>
            <div class="form-group sign">
                <input type="submit" value="Sign in" class="btn" />
                <div class="remember_me">
                    <label id="txtlabel" for="c_checkbox">Remember me</label>
                    <div class="custom_checkbox">
                        <input id="c_checkbox" asp-for="rememberMe" type="checkbox">
                        <label for="c_checkbox"></label>
                    </div>
                </div>
            </div>
        </form>

        <!--Login with 3rd party services-->
        <form asp-action="ExternalLogin" asp-controller="Account" asp-anti-forgery="true" method="post">
            <div class="form-group">
                <button type="submit" class="btn btn-google btn-social-icon btn-block" title="Login using your Google account"><i class="fab fa-google"></i></button>
            </div>
        </form>

        <p class="links">
            <a asp-action="ForgotPassword" asp-controller="Account">Forgot your password?</a> |
            <a asp-action="Register" asp-controller="Account">Create new account</a>
        </p>
    </div>
</div>
