@model DataStorage.App.ViewModels.ResetPasswordViewModel

@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="formhandler">
   <div class="formlabel">
      <h3>Reset password</h3>
   </div>
   
   <form asp-action="ResetPassword" asp-controller="Account" asp-anti-forgery="true">
      <div class="validation" asp-validation-summary="ModelOnly" />
      <div>
         <div class="form-group">
            <input placeholder=" " required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" type="password" asp-for="NewPassword" />
            <label asp-for="NewPassword">New Password</label>
            <span asp-validation-for="NewPassword" />
         </div>
         <div class="form-group">
            <input placeholder=" " required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" type="password" asp-for="ConfirmPassword" />
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" />
         </div>
         <div class="form-group">
            <input type="submit" value="Reset" />
         </div>
      </div>
   </form>
</div>