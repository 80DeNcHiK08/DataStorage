@model DataStorage.App.ViewModels.ResetPasswordViewModel

@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@{
    ViewData["Title"] = "Reset password";
}
<div class="formhandler">
    <form asp-action="ResetPassword" asp-controller="Account" asp-anti-forgery="true">
        <div class="formlabel">
            <h3>Reset password</h3>
        </div>
        <span class="signerrormessage">@ViewData["UserDoesNotExistErrorMessage"]</span>
        <input asp-for="UserId" type="hidden" />
        <input asp-for="Token" type="hidden" />
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="form-group-handler">
            <div class="form-group">
                <input placeholder=" " required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" type="password" asp-for="NewPassword" />
                <label asp-for="NewPassword" class="elemental">New Password</label>
                <span asp-validation-for="NewPassword" class="validation-message collapse">* Password field is required<br>* Password should contain one: uppercase, lowercase and non literic symbol<br>* Password must be at least 8 characters long</span>
            </div>
            <div class="form-group">
                <input placeholder=" " required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" type="password" asp-for="ConfirmPassword" />
                <label asp-for="ConfirmPassword" class="elemental">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="validation-message collapse">* Password field is required<br>* Password should contain one: uppercase, lowercase and non literic symbol<br>* Password must be at least 8 characters long</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reset" class="btn" />
            </div>
        </div>
    </form>
</div>