@model DataStorage.BLL.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Account/Layout.cshtml";
}

<h1>Register new user</h1>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <h2>
        <div class="row">
            <div class="col-25">
                <label asp-for="Email"></label><br />
            </div>
            <div class="col-75">
                <input asp-for="Email" />
            </div>
            <h6><span asp-validation-for="Email" class="err"></span></h6>
        </div>

        <div class="row">
            <div class="col-25">
                <label asp-for="Password"></label><br />
            </div>
            <div class="col-75">
                <input asp-for="Password" />
            </div>
            <h6> <span asp-validation-for="Password" class="err"></span></h6>
        </div>

        <div class="row">
            <div class="col-25">
                <label asp-for="ConfirmPassword"></label><br />
            </div>
            <div class="col-75">
                <input asp-for="ConfirmPassword" />
            </div>
            <h6><span asp-validation-for="Password" class="err"></span></h6>
        </div>

        <div class="row">
            <input type="submit" value="Register" />
        </div>
    </h2>
</form>

