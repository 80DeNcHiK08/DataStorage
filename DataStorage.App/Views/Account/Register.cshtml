@model DataStorage.App.ViewModels.RegisterViewModel

<div class="formhandler">
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="formlabel">
            <h3>Registration</h3>
        </div>
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="form-group-handler">
            <div class="form-group">
                <input placeholder=" " required pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,3}$" type="text" asp-for="Email" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <input placeholder=" " required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" type="password" asp-for="Password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input placeholder=" " required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" type="password" asp-for="ConfirmPassword" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div class="form-group">
                <input type="submit" value="Sign Up" />
                <div class="subm">
                    <a asp-action="Create">Sign up with <i class="fab fa-google"></i></a>
                </div>
            </div>
        </div>
    </form>
</div>