@model DataStorage.BLL.DTOs.DocumentDTO

@{
    Layout = "~/Views/Share/_Layout_share.cshtml";
    ViewData["Title"] = "SharedFile";
}
<div class="workspace">
    <div class="fileblockhandler">
        
            <div class="block fileblock">
                <div class="brow">
                    <input type="hidden" value='@Model.DocumentId' id="hiddenblockid" name="parentId">
                    <input type="hidden" value='@Model.IsFile.ToString()' id="hiddenblockfiletype">
                    @if (Model.IsFile == true)
                    {
                        <text><div class="fimg"></div></text>
                    }
                    else
                    {
                        <text><div class="fdimg"></div></text>
                    }
                </div>
                <div class="brow">
                    <h3 class="caption"><marquee behavior="scroll" direction="left">@Model.Name</marquee></h3>
                    <div class="cntr-btns">
                        <i class="fas fa-angle-up" id="moreoptions"></i>
                    </div>
                </div>
                <div class="eventhandler"></div>
                <div class="contextmenu">
                    <div class="items-handler">
                        <a class="func info">Details</a>
                        <a class="func download">Download</a>
                    </div>
                </div>
            </div>

        <hr />
    </div>
</div>
